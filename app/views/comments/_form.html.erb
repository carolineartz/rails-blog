<div class="row">
  <div class="columns large-12 small-12">
  <h4>Post a Comment</h4>

  <%= form_for [ @article, @comment ] do |f| %>
    <p>
      <%= f.label :author_name, "Your Name"  %>
<br/>
      <%= f.text_field :author_name %>
    </p>
    <p>
      <%= f.label :body %><br/>
      <%= f.text_area :body %>
    </p>
    <p>
       <%= f.submit class: "button" %>
    </p>
  <% end %>
  </div>
</div>