<div class="row">
  <div class="large-12 columns">
      <h1>Create New Article</h1>
  </div>
</div>

<div class="row">
  <div class="large-9 small-12 columns">
    <%= form_for(@article) do |f| %>
    <ul>
      <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit  "Create Article", class: "button" %>
    </p>
    <% end %>
  </div>
</div>
